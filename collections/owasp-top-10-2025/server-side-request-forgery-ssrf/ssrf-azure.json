{
    "info": {
      "name": "SSRF in Azure Services",
      "description": "Tests to identify SSRF vulnerabilities targeting Azure-specific resources, such as instance metadata.",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Access Azure Metadata",
        "request": {
          "method": "POST",
          "header": [
            { "key": "Content-Type", "value": "application/json" }
          ],
          "body": {
            "mode": "raw",
            "raw": "{ \"url\": \"http://169.254.169.254/metadata/instance?api-version=2021-02-01\" }"
          },
          "url": {
            "raw": "{{baseUrl}}/fetch-resource",
            "host": ["{{baseUrl}}"],
            "path": ["fetch-resource"]
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "// Validate access to Azure metadata is blocked",
                "pm.test('Access to Azure metadata is blocked', function () {",
                "    pm.response.to.have.status(403);",
                "    const jsonData = pm.response.json();",
                "    pm.expect(jsonData).to.have.property('error', 'Unauthorized access');",
                "});"
              ],
              "type": "text/javascript"
            }
          }
        ]
      }
    ],
    "variable": [
      { "key": "baseUrl", "value": "https://example.com" }
    ]
  }
  